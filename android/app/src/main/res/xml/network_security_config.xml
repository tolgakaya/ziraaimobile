<?xml version="1.0" encoding="utf-8"?>
<!-- Network Security Configuration for just_audio package -->
<!-- just_audio uses an internal HTTP proxy on 127.0.0.1 for headers support -->
<!-- This configuration allows cleartext traffic ONLY to localhost for security -->
<network-security-config>
    <domain-config cleartextTrafficPermitted="true">
        <!-- Allow cleartext traffic to localhost only (for just_audio internal proxy) -->
        <domain includeSubdomains="false">127.0.0.1</domain>
    </domain-config>
</network-security-config>
